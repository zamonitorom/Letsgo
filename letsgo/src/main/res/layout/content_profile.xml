<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.letsgoapp.Utils.Variables" />

        <import type="android.view.View" />

        <import type="android.text.InputType" />

        <import type="com.letsgoapp.Utils.LayoutManagers" />

        <variable
            name="profileVM"
            type="com.letsgoapp.ViewModels.ProfileViewModel" />
    </data>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    app:itemLayout="@{@layout/photo_recycler_item}"
                    app:items="@{profileVM.photos}"
                    app:layoutManager="@{LayoutManagers.grid(1,0,false)}"
                    app:variable="@{Variables.Item}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{!profileVM.isTouchable ? View.VISIBLE : View.GONE}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{profileVM.about.get()}"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{profileVM.isTouchable ? View.VISIBLE : View.GONE}"
                    android:orientation="vertical">

                    <com.letsgoapp.Utils.ExtendedEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"

                        android:inputType="@{profileVM.isTouchable? InputType.TYPE_CLASS_TEXT:InputType.TYPE_NULL}"
                        app:binding="@{profileVM.firstName}" />

                    <com.letsgoapp.Utils.ExtendedEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:inputType="@{profileVM.isTouchable? InputType.TYPE_CLASS_TEXT:InputType.TYPE_NULL}"
                        app:binding="@{profileVM.about}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Space
                            android:layout_width="260dp"
                            android:layout_height="wrap_content" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:background="@drawable/roundcorner"
                            android:clickable="@{profileVM.isTouchable? true: false}"
                            android:elevation="5dp"
                            android:shape="rectangle"
                            android:text="Send"
                            android:textColor="#FFFFFF"
                            app:onClick="@{profileVM::sendChanges}" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
</layout>