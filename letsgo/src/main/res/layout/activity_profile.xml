<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="profileVM"
            type="com.letsgoapp.ViewModels.ProfileViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:imageURL="@{profileVM.avatar}"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_profile"
            android:id="@+id/content"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:onClick="@{profileVM::fabClick}"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:imageResource="@{profileVM.icToolbar}" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab228"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin_gallery"
            android:visibility="@{profileVM.isTouchable ? View.VISIBLE : View.GONE}"
            app:onClick="@{profileVM::addPhotoGallery}"
            app:layout_anchor="@+id/recyclerView"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_image_white_36dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin_photo"
            android:visibility="@{profileVM.isTouchable ? View.VISIBLE : View.GONE}"
            app:onClick="@{profileVM::addPhotoCamera}"
            app:layout_anchor="@+id/recyclerView"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_add_a_photo_white_36dp" />

    </android.support.design.widget.CoordinatorLayout>
</layout>