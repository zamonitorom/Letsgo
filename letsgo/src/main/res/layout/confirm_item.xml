<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.letsgoapp.ViewModels.ConfirmItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingEnd="1dp"
        android:paddingTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="2dp"
            app:imageURL2="@{item.link}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.meetingName}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.userName}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:visibility="@{item.isRejected ? View.GONE : View.VISIBLE}" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:visibility="@{item.isApproved ? View.GONE : View.VISIBLE}" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:visibility="@{item.isApproved ? View.GONE : View.VISIBLE}" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</layout>